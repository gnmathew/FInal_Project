<%= render partial: 'admins/shared/admin_style' %>

<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <h3 class="justify-content-center">Client Users</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
      <tr>
        <th>Parent Email</th>
        <th>Email</th>
        <th>Level</th>
        <th>Total Deposit</th>
        <th>Member Total Deposit</th>
        <th>Coins</th>
        <th>Total Used Coins</th>
        <th>Children Members</th>
        <th>Phone Number</th>
        <th>Admin Balance Operate</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.parent&.email %></td>
          <td><%= client.email %></td>
          <td><%= client.member_level.level %></td>
          <td><%= client.total_deposit %></td>
          <td><%= client.children.sum { |child_member| child_member.total_deposit } %></td>
          <td><%= client.coins %></td>
          <td><%= client.bets.count %></td>
          <td><%= client.children_members %></td>
          <td><%= client.phone_number %></td>
          <td><%= link_to "Balance Operate", user_new_genre_order_path(user_id: client.id, genre: :increase), class: "btn btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>