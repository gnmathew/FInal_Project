<%= render 'search_form'%>
<div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Serial Number</th>
      <th>Email</th>
      <th>State</th>
      <th>Action Button</th>
    </tr>
    </thead>
    <tbody>
    <% @winners.each do |winner| %>
      <tr>
        <td><%= winner.bet.serial_number %></td>
        <td><%= winner.user.email %></td>
        <td><%= winner.state %></td>
        <td>
          <%= button_to 'Submit', submit_winner_path(winner), method: :patch, class: "btn btn-outline-warning" if winner.may_submit?  %>
          <%= button_to 'Pay', pay_winner_path(winner), method: :patch, class: "btn btn-outline-info" if winner.may_pay? %>
          <%= button_to 'Ship', ship_winner_path(winner), method: :patch, class: "btn btn-outline-secondary" if winner.may_ship?  %>
          <%= button_to 'Deliver', deliver_winner_path(winner), method: :patch, class: "btn btn-outline-light" if winner.may_deliver?  %>
          <%= button_to 'Publish', publish_winner_path(winner), method: :patch, class: "btn btn-outline-warning" if winner.may_publish?  %>
          <%= button_to 'Remove Publish', remove_publish_winner_path(winner), method: :patch, class: "btn btn-outline-danger" if winner.may_remove_publish? %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

