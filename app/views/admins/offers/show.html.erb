<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <h3 class="justify-content-center">Offer</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Genre</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Coin</th>
      <th>Buttons</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= image_tag @offer.image.url, class: "avatar-image", style: "width: 200px; height: 200px;" if @offer.image.present? %></td>
      <td><%= @offer.name %></td>
      <td><%= @offer.genre %></td>
      <td><%= @offer.status %></td>
      <td><%= @offer.amount %></td>
      <td><%= @offer.coin %></td>

      <td>
        <%= button_to 'Delete', offer_path, method: :delete, class: "btn btn-danger w-100 mb-1" %>
        <%= link_to 'Lists', offers_path, class: "btn btn-light w-100 mb-1" %>
      </td>
    </tr>
    </tbody>
  </table>
</div>