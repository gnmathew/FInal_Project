<%= render 'search_form'%>

<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <%= link_to 'New Offer', new_offer_path, style: "float: right; vertical-align: center", class: "btn btn-light mt-1 me-2" %>
    <h3 class="justify-content-center">All Offers</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Genre</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Coin</th>
      <th>Buttons</th>
    </tr>
    </thead>
    <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= image_tag offer.image.url,class: "avatar-image", style: "width: 150px; height: 150px;" if offer.image.present? %></td>
        <td><%= offer.name %></td>
        <td><%= offer.genre %></td>
        <td><%= offer.status %></td>
        <td><%= offer.amount %></td>
        <td><%= offer.coin %></td>
        <td>
          <%= link_to 'Edit', edit_offer_path(offer), class: "btn btn-outline-light w-100 mb-1" %>
          <%= link_to 'Show', offer_path(offer), class: "btn btn-outline-secondary w-100 mb-1" %>
          <%= button_to 'Delete', offer_path(offer), method: :delete, class: "btn btn-outline-danger w-100 mb-1" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>