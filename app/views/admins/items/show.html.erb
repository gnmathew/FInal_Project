
<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <h3 class="justify-content-center">Client Users</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Minimum Bets</th>
      <th>Batch Count</th>
      <th>Online At</th>
      <th>Offline At</th>
      <th>Start At</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @item.image.url, class: "avatar-image", style: "width: 100px; height: 100px;" if @item.image.present? %></td>
        <td><%= @item.name %></td>
        <td><%= @item.quantity %></td>
        <td><%= @item.minimum_bets %></td>
        <td><%= @item.batch_count %></td>
        <td><%= @item.online_at %></td>
        <td><%= @item.offline_at %></td>
        <td><%= @item.start_at %></td>
        <td><%= @item.status %></td>
        <td>
          <%= button_to 'Delete', item_path, method: :delete, class: "btn btn-danger w-100 mb-1" %>
          <%= link_to 'Lists', items_path, class: "btn btn-light w-100 mb-1" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>