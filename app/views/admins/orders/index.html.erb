<%= render 'search_form' %>

<div class="container" style="margin-top: 120px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <h3 class="justify-content-center">All Orders</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Serial Number</th>
      <th>State</th>
      <th>Offer</th>
      <th>Genre</th>
      <th>Amount</th>
      <th>Coin</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.serial_number %></td>
        <td><%= order.state %></td>
        <td><%= order.genre %></td>
        <td><%= order.offer.genre %></td>
        <td><%= order.amount %></td>
        <td><%= order.coin %></td>
        <td>
          <% if order.may_pay? %>
            <%= button_to 'Pay', pay_order_path(order), method: :patch, class: "btn btn-success w-100 mb-1" %>
          <% end %>
          <% if order.may_cancel? %>
            <%= button_to 'Cancel', cancel_order_path(order), method: :patch, class: "btn btn-outline-danger w-100 mb-1" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>Subtotal</td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= @sub_total %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>Total</td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= @total_orders %></td>
      <td></td>
      <td></td>
    </tr>
    </tbody>
  </table>
</div>
<%= paginate @orders %>