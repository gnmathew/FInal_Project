<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <%= link_to 'Create New', new_newsticker_path, style: "float: right; vertical-align: center", class: "btn btn-light mt-1 me-2" %>
    <h3 class="justify-content-center">News Ticker</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>Buttons</th>
    </tr>
    </thead>
    <tbody>
    <% @newstickers.each do |newsticker| %>
      <tr>
        <td><%= newsticker.content %></td>
        <td><%= newsticker.status %></td>
        <td>
          <%= link_to 'Show', newsticker_path(newsticker), class: "btn btn-outline-secondary w-100 mb-1" %>
          <%= button_to 'Delete', newsticker_path(newsticker), method: :delete, class: "btn btn-outline-danger w-100 mb-1" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>