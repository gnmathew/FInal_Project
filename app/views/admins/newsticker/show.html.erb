<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <h3 class="justify-content-center">News Ticker</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>Buttons</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @newsticker.content %></td>
        <td><%= @newsticker.status %></td>
        <td>
          <%= link_to 'Edit', edit_newsticker_path, class: "btn btn-outline-light w-100 mb-1" %>
          <%= button_to 'Delete', newsticker_path, method: :delete, class: "btn btn-outline-danger w-100 mb-1" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>