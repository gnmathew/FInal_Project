<div class="d-flex justify-content-center align-items-center" style="height: 80vh; ">
  <div class="card text-center" style="width: 50%; border-color: #2c2c2c">
    <div class="card-body" style="background-color: #2c2c2c;">
      <%= form_with(model: newsticker, url: url, method: method, data: { turbo: false}) do |form|  %>
        <div>
          <h3><%= form.label :content, style: "color:white" %></h3>
        </div>
        <div>
          <%= form.text_field :content, style: "width: 300px; height: 150px"%>
        </div>
        <div class="form-group mb-3">
          <%= form.label :status, style: "color: darkorange" %><br>
          <% Newsticker.statuses.each do |status, value| %>
            <%= form.radio_button :status, status, checked: newsticker.status == status %>
            <%= form.label status.humanize, style: "color: white" %>
          <% end %>
        </div>
        <%= form.submit class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>