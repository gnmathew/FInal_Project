<div class="container" style="margin-top: 170px;">
  <div style="background-color: #ffd500; border-style: solid; border-color: #ffd500; text-align: center;">
    <%= link_to 'Create New', new_banner_path, style: "float: right; vertical-align: center", class: "btn btn-light mt-1 me-2" %>
    <h3 class="justify-content-center">Banners</h3>
  </div>
  <table class="table table-bordered table-dark">
    <thead class="table-secondary">
    <tr>
      <th>Preview</th>
      <th>Status</th>
      <th>Online at</th>
      <th>Offline at</th>
      <th>Button</th>
    </tr>
    </thead>
    <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= image_tag banner.preview.url,class: "avatar-image", style: "width: 400px; height: 250px;" if banner.preview.present? %></td>
        <td><%= banner.status %></td>
        <td><%= banner.online_at %></td>
        <td><%= banner.offline_at %></td>
        <td>
          <%= link_to 'Edit', edit_banner_path(banner), class: "btn btn-outline-light w-100 mb-1" %>
          <%= button_to 'Delete', banner_path(banner), method: :delete, class: "btn btn-outline-danger w-100 mb-1" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>