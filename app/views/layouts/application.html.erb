<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <style>
      body {
          background: black;
          height: 100%;
          overflow:auto;
          margin: 0;
          padding: 0;
      }
      .position-h {
          position: relative;
          top: 0 !important;
      }

      .top-5 {
          top: 5% !important;
      }

      footer {
          position: sticky !important;
          bottom: 0 !important;
      }

      .wrapper {
          display: flex;
          flex-direction: column;
          min-height: 100vh;
      }

      main {
          flex-grow: 1 !important;
          padding-bottom: 20px;
      }
    </style>
  </head>

  <body class="wrapper">
    <%= render partial: 'clients/shared/client_navbar' %>
    <main class="position-h">
      <div class="container pt-lg-5" style="margin-top: 30px;">
        <% if flash[:alert] %>
          <div class="alert alert-primary d-flex align-items-center mb-sm-1" role="alert" style="height: 20px;">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:">
              <use xlink:href="#check-circle-fill"/>
            </svg>
            <div>
              <%= alert %>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="alert alert-warning d-flex align-items-center mb-sm-1" role="alert">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Warning:">
              <use xlink:href="#exclamation-triangle-fill"/>
            </svg>
            <div>
              <%= notice %>on
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </main>

    <%= render partial: 'clients/shared/client_footer' %>
  </body>
</html>
