<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card text-center" style="width: 50%;">
    <div class="card-body">
      <h3 class="text-muted">Edit My Profile</h3>
      <%= form_with(model: current_user, url: profile_path, method: :patch) do |form| %>

        <div class="form-group mb-3">
          <% form.label :username, class: "form-label" %>
          <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
        </div>

        <div class="form-group mb-3">
          <% form.label :Phone_number, class: "form-label" %>
          <%= form.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
        </div>

        <div class="form-group mb-3">
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <%= form.submit "Update", class: "btn btn-warning w-100"%>
      <% end %>
    </div>
  </div>
</div>
