<div class="text-center mt-xxl-5">
  <h2 style="color: darkorange">Share Your Feedback</h2>
</div>

<div class="d-flex justify-content-center align-items-center" style="height: 60vh; ">
  <div class="card text-center" style="width: 50%; border-color: #2c2c2c">
    <div class="card-body" style="background-color: #2c2c2c;">

      <%= form_with(model: @winner, url: feedback_path(@winner), method: :patch, data: {turbo: false}) do |form| %>
        <div class="mb-3">
          <%= form.file_field :picture, class: "form-control" %>
        </div>
        <div class="mb-5">
          <%= form.text_field :comment, class: "form-control" , placeholder: "Feedback"%>
        </div>
        <div>
          <%= form.submit "Share", class: "btn btn-warning w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>